{
  "manifest_version": 3,
  "name": "CodeSpin.AI Chat",
  "version": "1.0",
  "description": "Adds a link to code blocks on ChatGPT to sync with VSCode",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*"],
      "js": ["dist/index.js"],
      "type": "module"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["dist/*", "dist/main.js"],
      "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*"]
    }
  ]
}
